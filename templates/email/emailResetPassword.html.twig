{% extends 'base.html.twig' %}
{% block body %}
    {% apply inline_css %}
        <style>
            .btn-resetPasswordLink{
                display:inline-block;
                border-radius: 10px;
                width: 200px;
                height: 40px;
                color:black;
                font-size: 14px;
                background-color: #a88bfa;
                text-decoration: none;
                text-align: center;
                padding: 10px 20px;
            }

            p{
                font-size: 15px;
            }
        </style>
    <h2>Witaj, {{name}} {{ surname }} !</h2>
    <p>Oto link do resetowania hasła.</p>
    <a href="{{link}}" class="btn-resetPasswordLink" >Resetuj hasło</a>

    {% endapply %}
{% endblock %}