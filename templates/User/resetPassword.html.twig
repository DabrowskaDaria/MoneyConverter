{% extends 'base.html.twig' %}

{% block body %}
{% include 'includes/header.html.twig' %}
    <div class="container d-flex justify-content-center mt-4">
        <div class="d-flex flex-column border rounded shadow gap-2 p-5 w-50 mt-5" >
            <h2 class="text-center">{{ 'newPassword' | trans }}</h2>
            {% if app.flashes('error') %}
                <div class="alert alert-danger">
                    {% for message in app.flashes('error') %}
                    <p>{{ message }}</p>
                    {% endfor %}
                </div>
            {% endif %}
            {% if app.flashes('success') %}
                <div class="alert alert-success">
                    {% for message in app.flashes('success') %}
                        <p>{{message}}</p>
                    {% endfor %}
                </div>
            {% endif %}


            {{ form_start(form) }}
                <div class="form-floating">
                    {{ form_row(form.password, {'label' : 'form.password' | trans }) }}
                </div>
                <div class="form-floating">
                    {{ form_row(form.repeatPassword, {'label' : 'form.repeatPassword' | trans } ) }}
                </div>
                <div class="form-floating">
                    {{ form_row(form.submit, {'label' : 'form.newPassword' | trans }) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}