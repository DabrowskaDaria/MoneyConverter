{% extends 'base.html.twig' %}

{% block body %}
{% include 'includes/header.html.twig' %}
    <div class="container d-flex justify-content-center mt-4">
        <div class="d-flex flex-column border rounded shadow gap-2 p-5 w-50 mt-5" >
            <h2 class="text-center">Ustaw nowe hasło</h2>
            <div class="form-floating">
                <input type="password" id="password" class="form-control form-control-sm" placeholder="hasło">
                <label for="password">Podaj hasło</label>
            </div>
            <div class="form-floating">
                <input type="password" id="repeatPassword" class="form-control" placeholder="hasło">
                <label for="repeatPassword">Powtórz hasło</label>
            </div>
            <button class="btn btn-register-login-remindPassword" type="submit">Zmień hasło</button>
        </div>
    </div>
{% endblock %}