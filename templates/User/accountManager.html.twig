{% extends 'base.html.twig' %}

{% block body %}

    {% include 'includes/headerUser.html.twig' %}

    <div class="container justify-content-center w-50">
        <div class="card mt-5 p-3 ">
            <div class="card-body">
                <h3>{{ 'loadImage' | trans }}</h3>
                <div class="d-flex p-2 w-50">
                    <img class="card-img-top" src="https://a.allegroimg.com/original/110259/f98874694164a55a47bf1c61c25a/Fototapeta-ZACHOD-SLONCA-w-gorach-widok-3D-180x120 " alt="photo">
                </div>

                <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s. </p>
                <form>
                    <div class="row">
                        <div class="col-12">
                            <input type="file" class="form-control" id="file" name="file">
                        </div>
                        <div class="col-6">
                            <button type="reset" class="btn-submit mt-2">{{ 'remove' | trans }}</button>
                        </div>
                        <div class="col-6">
                            <button type="submit" class="btn-submit mt-2">{{ 'save' | trans }}</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}