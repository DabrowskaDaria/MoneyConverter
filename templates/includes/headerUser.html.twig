{% extends 'base.html.twig' %}
{% block body %}
    <div class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="{{ path('homePageForUser') }}"><b>{{ 'app_home' | trans }}</b></a>
            <div>
                <form action="{{ path('change_language') }}" method="post">
                    <button type="submit" name="language" class="btn-language" value="en" >English</button>
                    <button type="submit" name="language" class="btn-language" value="pl"> Polski</button>
                </form>
            </div>

            <div class="ms-auto d-flex align-items-center gap-2">
                <i class="fa-regular fa-circle-user fa-xl"></i>
                <h3 class="mb-0">{{ 'hello' | trans }}</h3>
            </div>

            <div class="dropdown">
                <button class="btn btn-light dropdown-toggle d-flex align-items-center gap-2" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false"></button>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                    <li><a class="dropdown-item" href="{{path('userActivity')}}">{{ 'activity' | trans }}</a></li>
                    <li><a class="dropdown-item" href="{{path('accountManager')}}">{{ 'account' | trans }}</a></li>
                    <li><a class="dropdown-item" href="{{path('app_logout')}}">{{'logOut' | trans}}</a></li>
                </ul>
            </div>
        </div>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}