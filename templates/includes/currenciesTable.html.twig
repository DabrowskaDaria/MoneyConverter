{% extends 'base.html.twig' %}
{% block body %}
<div class="container mt-4">
    <h5>Kursy walut z dnia: {{ date }}</h5>
    <table class="table table-bordered table-hover">
        <thead class="table-header">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Waluta</th>
                <th scope="col">Kurs kupna</th>
                <th scope="col">Kurs sprzedaży</th>
                <th scope="col">Różnica</th>
            </tr>
        </thead>
        <tbody>
        {%  for currency in currencies %}
        <tr>
            <td>{{ currency.id }}</td>
            <td>{{ currency.name }}</td>
            <td>{{ currency.buyRate }}</td>
            <td>{{ currency.sellRate }}</td>
            <td>{{ currency.spread }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}